<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Main.css" rel="stylesheet" />
</head>

<body>
    @if (Request.IsAuthenticated)
    {
         <div class="login">
           @Html.Partial("_LoginPartial")
         </div>
    }

    <div class="logo">
        <a href='@Url.Action("Index", "Home")'>
            <img id="logo" src="http://i296.photobucket.com/albums/mm180/marinjonsdottir2/logo_zpsr2yatmf8.jpg" alt="makeup logo" />
        </a>
    </div>

    <div class="navbar-inverse navbar-fixed-top>
        <div class=" container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Fréttaveita", "Index", "Home")</li>
                <li>@Html.ActionLink("Um síðuna", "About", "Home")</li>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Mín síða", "MyProfile", "Home")</li>
                    <li>@Html.ActionLink("Tilboð", "Offer", "Home")</li>
                    <li>@Html.ActionLink("Förðunarfræðingar", "Artist", "Home")</li>

                }
            </ul>

            @if (Request.IsAuthenticated)
{
    <form action="/" method="post">
        <input type="text" class="form-control pull-right search-box" placeholder="Leita.." />
    </form>
}
        </div>
    </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
